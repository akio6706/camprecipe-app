<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'col-lg-6 text-center mx-auto', local: true do |f| %>
  <br><br>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <button type="submit" class="btn btn-primary new-btn">Submit</button>
<% end %>

<%= render "shared/footer" %>