<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <title>CampRecipe</title>
  </head>
  <%= render "shared/second-header"%>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'col-lg-4 text-center mx-auto', local: true do |f| %>
    <br><br>
    <div class='form-header'>
      <h1 class='form-header-text'>
        会員情報入力
      </h1>
    </div>
    <br>
    <%= render 'shared/error_messages', model: f.object %>
    <div class="mb-3">
      <label for="exampleInputNickname" class="form-label">ニックネーム</label>
      <%= f.text_area :nickname, class:"form-control", id:"nickname", placeholder:"例) furima太郎" %>
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword2" class="form-label">確認Password</label>
      <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="mb-3">
      <label for="exampleInputName" class="form-label">名前(フルネーム)</label>
      <%= f.text_area :name, class:"form-control", id:"name", placeholder:"例) 山田" %>
    </div>
    <div class="mb-3">
      <label for="exampleInputNamekana" class="form-label">ふりがな</label>
      <%= f.text_area :name_kana, class:"form-control", id:"name-kana", placeholder:"例) ヤマダ" %>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</html>