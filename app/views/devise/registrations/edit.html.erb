<%= render "shared/second-header"%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<br><br>
  <div class='col-lg-4 text-center mx-auto'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        会員情報編集
      </h1>
    </div>
    <%= render 'shared/error_messages', model: f.object %>
    <br>
    <div class="mb-3">
      <label for="exampleInputNickname" class="form-label">ニックネーム</label>
      <%= f.text_field :nickname, class:"form-control", id:"nickname", placeholder:"例) furima太郎" %>
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword2" class="form-label">確認Password</label>
      <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="mb-3">
      <label for="exampleInputName" class="form-label">名前(フルネーム)</label>
      <%= f.text_field :name, class:"form-control", id:"name", placeholder:"例) 山田" %>
    </div>
    <div class="mb-3">
      <label for="exampleInputNamekana" class="form-label">ふりがな</label>
      <%= f.text_field :name_kana, class:"form-control", id:"name-kana", placeholder:"例) ヤマダ" %>
    </div>
    <button type="submit" class="btn btn-primary new-btn">Submit</button>
  </div>
<% end %>

<%= render "shared/footer" %>