  <div class="row">
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <img src='../images/camp_cook1.jpg' class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">レシピ難易度1</h5>
          <p class="card-text">料理の説明</p>
          <%= link_to "Level 1", level1_recipes_path ,class:"btn btn-success"%>
        </div>
      </div>
    </div>
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <img src='../images/camp_cook1.jpg' class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">レシピ難易度2</h5>
          <p class="card-text">料理の説明</p>
          <%= link_to "Level 2", level2_recipes_path ,class:"btn btn-success"%>
        </div>
      </div>
    </div>
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <img src='../images/camp_cook1.jpg' class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">レシピ難易度3</h5>
          <p class="card-text">料理の説明</p>
