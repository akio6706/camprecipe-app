<%= render "shared/header" %>
<div class="jumbotron">
  <div class='index-content'>
    <br><br><h1 class='text-white'>~ Go to Camping ~</h1>
  </div>
</div>
<br><br>
<div class="container">
  <div class="col-lg-6 text-center mx-auto">
    <h1>難易度別レシピ</h1>
