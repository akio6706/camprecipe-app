<%= render "shared/second-header"%>

<div class="col-lg-6 text-center mx-auto">
  <h1>会員情報</h1>
  <br>
  <%= link_to "プロフィール編集", edit_user_registration_path(current_user) ,class:"btn btn-success profile-edit"%>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td>ニックネーム</td>
        <td><%= @user.nickname %></td>
      </tr>
      <tr>
        <td>名前</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>ふりがな</td>
        <td><%= @user.name_kana %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= @user.email %></td>
      </tr>
    </tbody>
  </table>
  <br><h1>レシピ一覧</h1><br>
</div>
<div class="container">
  <div class="row">
  <%= render partial: 'recipes/recipe', collection: @user.recipes %>
  </div>
</div>

<%= render "shared/footer" %>